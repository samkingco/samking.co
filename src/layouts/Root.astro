---
import { ClientRouter } from "astro:transitions";
import "./styles.css";

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const {
	title,
	description = "Freelance software engineer and designer with over a decade of startup experience. Specializing in early-stage and creative projects, from concept to production. Based in Vancouver, Canada.",
	ogImage = "/og.png",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`https://samking.co${ogImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="https://samking.co" />
    <meta property="og:site_name" content={title} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`https://samking.co${ogImage}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@samkingco" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Sam King's Journal"
      href="https://samking.co/rss.xml"
    />

    <ClientRouter />
  </head>
  <body
    class="bg-background text-foreground leading-normal sm:[--left-col-width:8rem] [--left-col-width:4rem]"
  >
    <slot />
  </body>
</html>
