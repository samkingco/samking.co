---
import Link from "../components/Link.astro";
import RootLayout from "./Root.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}
const props = Astro.props;
---

<RootLayout {...props}>
  <main class="max-w-[72ch] mx-1lh md:mx-2lh pt-2lh pb-12 space-y-2lh">
    <header>
      <h1 class="font-bold text-foreground">
        <a href="/">Sam King</a>
      </h1>
      <p class="text-secondary-foreground">
        <Link href="/freelance">Freelance Software Engineer &amp; Designer</Link>
      </p>
      <p class="text-secondary-foreground">Vancouver, Canada</p>
    </header>

    <slot />
  </main>
</RootLayout>
