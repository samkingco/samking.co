---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<article class="flex flex-col gap-0.25 sm:flex-row sm:gap-2 items-baseline">
  <p
    class="w-full max-w-[var(--left-col-width)] text-sm text-muted-foreground tabular-nums slashed-zero"
  >
    {label}
  </p>
  <section class="flex-1 space-y-0.5">
    <slot />
  </section>
</article>
